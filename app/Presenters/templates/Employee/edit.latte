{block content}
    <div class="EmployeeEditCard">
    <h1>{$title}</h1>



    <form n:name=employeeForm class=form>
        <div class="row">
            {label name class=>'form-label'}
            {input name class=>'form-control'}
        </div>
        <div  class="row">
            {label id_position class=>'form-label'}
            {input id_position class=>'form-control form-select form-select-lg mb-3' }
        </div>
        <div  class="row">
            {label date_employment class=>'form-label'}
            {input date_employment class=>'form-control'}
        </div>
        <div  class="row">
            {label state class=>'form-label'}
            {input state class=>'form-control form-control form-select form-select-lg mb-3'}
        </div>
        <div  class="row">
            <input n:name=send class="btn btn-primary">
        </div>
    </form>
    </div>

{/block}